{
  "input": {
    "type": "object",
    "properties": {
      "payer": {
        "type": "string",
        "description": "Insurance company name (e.g., 'Delta Dental', 'Blue Cross')"
      },
      "plan": {
        "type": "string",
        "description": "Insurance plan type (e.g., 'PPO', 'HMO')"
      },
      "procedure_code": {
        "type": "string",
        "description": "CPT or procedure code (e.g., 'D1110' for cleaning)"
      },
      "dob": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Patient date of birth in YYYY-MM-DD format (optional)"
      }
    },
    "required": ["payer", "plan", "procedure_code"],
    "additionalProperties": false
  },
  "output": {
    "type": "object",
    "properties": {
      "covered": {
        "type": "boolean",
        "description": "Whether the procedure is covered"
      },
      "copay_estimate": {
        "type": "number",
        "description": "Estimated copay amount in USD"
      },
      "notes": {
        "type": "string",
        "description": "Additional coverage notes or restrictions"
      }
    },
    "required": ["covered", "copay_estimate"],
    "additionalProperties": false
  }
}
